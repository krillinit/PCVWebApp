                </div>
                <div class="form-group">
                    <label asp-for="EffectiveEnd" class="control-label"></label>
                    <input asp-for="EffectiveEnd" class="form-control" />
                    <span asp-validation-for="EffectiveEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestId" class="control-label"></label>
                    <input asp-for="RequestId" class="form-control" />
                    <span asp-validation-for="RequestId" class="text-danger"></span>
                </div>
                <div class="form-group">
