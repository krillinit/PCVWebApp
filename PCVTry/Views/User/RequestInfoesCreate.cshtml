                    <label asp-for="TodayDate" class="control-label"></label>
                    <input asp-for="TodayDate" class="form-control" />
                    <span asp-validation-for="TodayDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestType" class="control-label"></label>
                    <input asp-for="RequestType" class="form-control" />
                    <span asp-validation-for="RequestType" class="text-danger"></span>
